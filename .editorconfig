root = true

[*.{cs,csx}]
dotnet_diagnostic.CA2007.severity = warning
dotnet_diagnostic.CS1591.severity = suggestion
csharp_style_var_for_built_in_types = true:suggestion
csharp_new_line_before_open_brace = all

[*.csproj]
indent_style = space
indent_size = 2

[*.{json,yml,yaml,md}]
indent_style = space
indent_size = 2
